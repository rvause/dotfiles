export TERMINAL=sakura
srandrd /home/rvause/bin/detect_displays  # Update on VGA plug/unplug
dunst &  # Notifications
redshift &  # Easy on the eyes
unclutter -idle 2 -keystroke &  # Hide mouse cursor
setxkbmap -layout pl  # pl keyboard layout
xautolock -time 5 -locker "lock.sh" -detectsleep &
/usr/bin/xset b off
exec i3
